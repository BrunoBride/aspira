        // Theme Toggle
        const themeToggle = document.getElementById('theme-toggle');
        const themeIcon = themeToggle.querySelector('i');
        
        themeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            
            if (document.body.classList.contains('dark-mode')) {
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
                showAchievement('Modo Noturno Ativado', 'Voc√™ desbloqueou o modo escuro para leitura noturna confort√°vel!');
            } else {
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
            }
        });
        
        // Scroll Animation
        const sections = document.querySelectorAll('.section');
        const navItems = document.querySelectorAll('.nav-item');
        
        function checkSections() {
            const triggerBottom = window.innerHeight * 0.8;
            
            sections.forEach(section => {
                const sectionTop = section.getBoundingClientRect().top;
                
                if (sectionTop < triggerBottom) {
                    section.classList.add('visible');
                    updateProgress();
                }
            });
        }
        
        function updateProgress() {
            const totalSections = sections.length;
            const visibleSections = document.querySelectorAll('.section.visible').length;
            const progressPercent = Math.round((visibleSections / totalSections) * 100);
            
            document.getElementById('progress-percent').textContent = `${progressPercent}%`;
            document.getElementById('progress-fill').style.width = `${progressPercent}%`;
            
            if (progressPercent === 100 && !progressComplete) {
                progressComplete = true;
                showAchievement('Estudo Completo!', 'Parab√©ns! Voc√™ concluiu todo o material sobre Batalha Espiritual!');
            }
        }
        
        // Navigation Scrolling
        navItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = item.getAttribute('href').substring(1);
                const targetSection = document.getElementById(targetId);
                
                window.scrollTo({
                    top: targetSection.offsetTop - 70,
                    behavior: 'smooth'
                });
            });
        });
        
        // Study Timer
        const timerDisplay = document.getElementById('timer-display');
        const startTimerBtn = document.getElementById('start-timer');
        const pauseTimerBtn = document.getElementById('pause-timer');
        const resetTimerBtn = document.getElementById('reset-timer');
        const minimizeTimerBtn = document.getElementById('minimize-timer');
        const studyTimer = document.getElementById('study-timer');
        
        let timerInterval;
        let seconds = 0;
        let timerRunning = false;
        
        function updateTimer() {
            seconds++;
            const minutes = Math.floor(seconds / 60);
            const remainingSeconds = seconds % 60;
            
            timerDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${remainingSeconds.toString().padStart(2, '0')}`;
            
            if (seconds === 300 && !fiveMinuteAchievement) { // 5 minutes
                fiveMinuteAchievement = true;
                showAchievement('5 Minutos de Estudo!', 'Voc√™ dedicou 5 minutos ao estudo da Batalha Espiritual!');
            }
            
            if (seconds === 900 && !fifteenMinuteAchievement) { // 15 minutes
                fifteenMinuteAchievement = true;
                showAchievement('15 Minutos de Estudo!', 'Sua dedica√ß√£o √© impressionante! Continue assim!');
            }
        }
        
        startTimerBtn.addEventListener('click', () => {
            if (!timerRunning) {
                timerInterval = setInterval(updateTimer, 1000);
                timerRunning = true;
                startTimerBtn.style.display = 'none';
                pauseTimerBtn.style.display = 'block';
            }
        });
        
        pauseTimerBtn.addEventListener('click', () => {
            clearInterval(timerInterval);
            timerRunning = false;
            startTimerBtn.style.display = 'block';
            pauseTimerBtn.style.display = 'none';
        });
        
        resetTimerBtn.addEventListener('click', () => {
            clearInterval(timerInterval);
            seconds = 0;
            timerDisplay.textContent = '00:00';
            timerRunning = false;
            startTimerBtn.style.display = 'block';
            pauseTimerBtn.style.display = 'none';
        });
        
        minimizeTimerBtn.addEventListener('click', () => {
            studyTimer.classList.toggle('minimized');
            
            if (studyTimer.classList.contains('minimized')) {
                minimizeTimerBtn.innerHTML = '<i class="fas fa-plus"></i>';
            } else {
                minimizeTimerBtn.innerHTML = '<i class="fas fa-minus"></i>';
            }
        });
        
        // Achievement System
        const achievementBadge = document.getElementById('achievement-badge');
        let progressComplete = false;
        let fiveMinuteAchievement = false;
        let fifteenMinuteAchievement = false;
        
        function showAchievement(title, description) {
            const badgeTitle = document.querySelector('.badge-title');
            const badgeDescription = document.getElementById('achievement-text');
            
            badgeTitle.textContent = title;
            badgeDescription.textContent = description;
            
            achievementBadge.classList.add('show');
            
            setTimeout(() => {
                achievementBadge.classList.remove('show');
            }, 5000);
        }
        
        // Flashcards System
        const flashcard = document.getElementById('flashcard');
        const prevCardBtn = document.getElementById('prev-card');
        const nextCardBtn = document.getElementById('next-card');
        const currentCardDisplay = document.getElementById('current-card');
        const totalCardsDisplay = document.getElementById('total-cards');
        
        const flashcards = [
            {
                front: "Quais s√£o as cinco armas espirituais mencionadas na aula?",
                back: "1. Ora√ß√£o<br>2. Jejum<br>3. Conhecimento da Palavra<br>4. Louvor e Adora√ß√£o<br>5. F√©"
            },
            {
                front: "Segundo Ef√©sios 6:12, contra quem realmente lutamos?",
                back: "N√£o contra carne e sangue, mas contra principados, potestades, pr√≠ncipes das trevas e hostes espirituais da maldade nos lugares celestiais."
            },
            {
                front: "Qual passagem b√≠blica descreve a queda de L√∫cifer?",
                back: "Isa√≠as 14:12-15"
            },
            {
                front: "Por quantos dias Daniel jejuou para receber resposta de Deus?",
                back: "21 dias"
            },
            {
                front: "Complete o vers√≠culo: 'Sem santifica√ß√£o, ningu√©m...'",
                back: "'...ver√° o Senhor.' (Hebreus 12:14)"
            },
            {
                front: "Quem louvou a Deus na pris√£o e foi libertado milagrosamente?",
                back: "Paulo e Silas (Atos 16)"
            },
            {
                front: "De acordo com Hebreus 11:1, o que √© a f√©?",
                back: "A certeza das coisas que se esperam e a convic√ß√£o de fatos que n√£o se veem."
            },
            {
                front: "Qual foi o motivo principal da queda de L√∫cifer?",
                back: "Seu orgulho e ambi√ß√£o de ser semelhante ao Alt√≠ssimo (ser como Deus)."
            },
            {
                front: "De acordo com Os√©ias 4:6, por que o povo de Deus √© destru√≠do?",
                back: "Por falta de conhecimento."
            },
            {
                front: "Por que a santifica√ß√£o √© importante na batalha espiritual?",
                back: "√â um requisito para ver o Senhor, confere maior autoridade espiritual e nos torna mais parecidos com Cristo."
            }
        ];
        
        let currentCardIndex = 0;
        totalCardsDisplay.textContent = flashcards.length;
        
        function updateFlashcard() {
            const frontContent = flashcard.querySelector('.flashcard-front p');
            const backContent = flashcard.querySelector('.flashcard-back p');
            
            frontContent.innerHTML = flashcards[currentCardIndex].front;
            backContent.innerHTML = flashcards[currentCardIndex].back;
            currentCardDisplay.textContent = currentCardIndex + 1;
            
            // Ensure card is showing front when changing
            if (flashcard.classList.contains('flipped')) {
                flashcard.classList.remove('flipped');
            }
        }
        
        flashcard.addEventListener('click', () => {
            flashcard.classList.toggle('flipped');
        });
        
        prevCardBtn.addEventListener('click', () => {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                updateFlashcard();
            }
        });
        
        nextCardBtn.addEventListener('click', () => {
            if (currentCardIndex < flashcards.length - 1) {
                currentCardIndex++;
                updateFlashcard();
            }
            
            if (currentCardIndex === flashcards.length - 1) {
                showAchievement('Mestre dos Flashcards!', 'Voc√™ revisou todos os cart√µes de memoriza√ß√£o!');
            }
        });
        
        // Quiz System
        const checkAnswerBtn = document.getElementById('check-answer');
        const nextQuestionBtn = document.getElementById('next-question');
        const restartQuizBtn = document.getElementById('restart-quiz');
        const quizFooter = document.getElementById('quiz-footer');
        const quizResults = document.getElementById('quiz-results');
        const scoreDisplay = document.getElementById('score');
        const resultMessage = document.getElementById('result-message');
        
        let currentQuestion = 1;
        let score = 0;
        let questionAnswered = false;
        
        const options = document.querySelectorAll('.option');
        options.forEach(option => {
            option.addEventListener('click', () => {
                if (!questionAnswered) {
                    const currentQuestionOptions = document.querySelectorAll(`#question-${currentQuestion} .option`);
                    
                    currentQuestionOptions.forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    
                    option.classList.add('selected');
                }
            });
        });
        
        checkAnswerBtn.addEventListener('click', () => {
            const selectedOption = document.querySelector(`#question-${currentQuestion} .option.selected`);
            
            if (selectedOption && !questionAnswered) {
                questionAnswered = true;
                
                if (selectedOption.getAttribute('data-correct') === 'true') {
                    selectedOption.classList.add('correct');
                    score++;
                } else {
                    selectedOption.classList.add('incorrect');
                    
                    // Show the correct answer
                    const correctOption = document.querySelector(`#question-${currentQuestion} .option[data-correct="true"]`);
                    correctOption.classList.add('correct');
                }
                
                checkAnswerBtn.style.display = 'none';
                
                if (currentQuestion < 5) {
                    nextQuestionBtn.style.display = 'block';
                } else {
                    showQuizResults();
                }
            }
        });
        
        nextQuestionBtn.addEventListener('click', () => {
            document.getElementById(`question-${currentQuestion}`).style.display = 'none';
            currentQuestion++;
            document.getElementById(`question-${currentQuestion}`).style.display = 'block';
            
            questionAnswered = false;
            nextQuestionBtn.style.display = 'none';
            checkAnswerBtn.style.display = 'block';
        });
        
        function showQuizResults() {
            quizFooter.style.display = 'none';
            quizResults.style.display = 'block';
            scoreDisplay.textContent = score;
            
            if (score === 5) {
                resultMessage.textContent = "Excelente! Voc√™ domina os conceitos da batalha espiritual!";
                showAchievement('Quiz Perfeito!', 'Voc√™ acertou todas as perguntas do quiz! Dom√≠nio completo!');
            } else if (score >= 3) {
                resultMessage.textContent = "Bom trabalho! Voc√™ compreende bem os princ√≠pios da batalha espiritual.";
                showAchievement('Bom no Quiz!', 'Voc√™ demonstrou um bom conhecimento sobre batalha espiritual!');
            } else {
                resultMessage.textContent = "Continue estudando os conceitos para fortalecer seu conhecimento.";
            }
        }
        
        restartQuizBtn.addEventListener('click', () => {
            // Reset quiz state
            currentQuestion = 1;
            score = 0;
            questionAnswered = false;
            
            // Hide all questions and reset options
            for (let i = 1; i <= 5; i++) {
                document.getElementById(`question-${i}`).style.display = i === 1 ? 'block' : 'none';
                
                const questionOptions = document.querySelectorAll(`#question-${i} .option`);
                questionOptions.forEach(option => {
                    option.classList.remove('selected', 'correct', 'incorrect');
                });
            }
            
            // Reset UI
            quizResults.style.display = 'none';
            quizFooter.style.display = 'flex';
            checkAnswerBtn.style.display = 'block';
            nextQuestionBtn.style.display = 'none';
        });
        
        // Audio Players
        const audioButtons = document.querySelectorAll('.audio-play-btn');
        
        audioButtons.forEach(button => {
            button.addEventListener('click', () => {
                const audioPlayer = button.parentElement;
                const verse = audioPlayer.getAttribute('data-verse');
                const icon = button.querySelector('i');
                
                if (icon.classList.contains('fa-play')) {
                    // Simulate audio playing
                    icon.classList.remove('fa-play');
                    icon.classList.add('fa-pause');
                    
                    // After 3 seconds (simulating audio duration), revert back
                    setTimeout(() => {
                        icon.classList.remove('fa-pause');
                        icon.classList.add('fa-play');
                    }, 3000);
                } else {
                    // Pause simulation
                    icon.classList.remove('fa-pause');
                    icon.classList.add('fa-play');
                }
            });
        });
        
        // Initialize
        window.addEventListener('scroll', checkSections);
        window.addEventListener('DOMContentLoaded', () => {
            checkSections();
            updateFlashcard();
            
            // Show first achievement
            setTimeout(() => {
                showAchievement('Estudo Iniciado!', 'Voc√™ come√ßou a aprender sobre Batalha Espiritual!');
            }, 2000);
        });
    </script>
</body>
</html>
